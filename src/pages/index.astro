---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home Page";
---

<BaseLayout pageTitle={pageTitle}>
	<main class='space-y-40 mb-40'>
		<div class='relative'>
			<div class='max-w-7xl mx-auto px-6 md:px-12 xl:px-6'>
				<div class='relative ml-auto pt-24'>
					<div
						class='flex flex-row items-center justify-center lg:w-5/6 mx-auto'
					>
						<div class='basis-1/2'>
							<h1 class='py-4 text-slate-300 text-8xl'>
								Hi, I'm <span class='text-indigo-500'>Yoeri</span>
							</h1>
							<h1 class='py-2 text-gray-300'>
								I love building front end experiences
							</h1>
							<p class='py-4 text-gray-400'>
								I'm focused on building responsive front-end web applications
								I've always had a passion for technology and computers and
								decided to learn how to make simple websites which turned into
								some freelance gigs.
							</p>
						</div>
						<div class='basis-1/2'>
							<img
								src='../../public/img/architech.png'
								alt=''
								class='item-center'
							/>
						</div>
					</div>

					<div class='mt-12 grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6'>
						<div
							class='p-4 grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/html.png'
								class='h-12 w-auto mx-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
						<div
							class='p-4 grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/css.png'
								class='h-12 w-auto m-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
						<div
							class='p-4 flex grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/javascript.png'
								class='h-9 w-auto m-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
						<div
							class='p-4 grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/php.png'
								class='h-12 w-auto mx-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
						<div
							class='p-4 flex grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/react.png'
								class='h-8 w-auto m-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
						<div
							class='p-4 grayscale transition duration-200 hover:grayscale-0'
						>
							<img
								src='../../public/skill-icons/tailwind.png'
								class='h-12 w-auto mx-auto'
								loading='lazy'
								alt='client logo'
								width=''
								height=''
							/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</BaseLayout>
