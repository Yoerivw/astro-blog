---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
	<div class='text-white text-center'>
		<p class='text-4xl mb-4'>
			Under construction, I don't think you'll learn something here atm.
		</p>
		<div>
			<div class='max-w-7xl mx-auto px-6 md:px-12 xl:px-6'>
				<div class='mb-12 space-y-2 text-center'>
					<h2
						class='text-3xl font-bold text-gray-800 md:text-4xl dark:text-white'
					>
						Latest Articles
					</h2>
					<p class='lg:mx-auto lg:w-6/12 text-gray-600 dark:text-gray-300'>
						blog posts made trhough astro tutorial
					</p>
				</div>
				<div class=''>
					<ul class='grid gap-8 md:grid-cols-2 lg:grid-cols-3'>
						{
							allPosts.map((post) => (
								<BlogPost
									url={post.url}
									title={post.frontmatter.title}
									img={post.frontmatter.image.url}
									description={post.frontmatter.description}
								/>
							))
						}
					</ul>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
